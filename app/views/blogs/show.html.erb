<div class="container">
	<div class="row">
		<h1><%= link_to "Volver", blogs_path %></h1>
		<p><%= @blog.title %></p>
		<p><%= @blog.body %></p>
		<% diff_mins = (Time.now - @blog.created_at) / 60 %>
		<p>Publicado por <%= @blog.user.email %> hace <%= diff_mins.to_i %> minutos</p>
		<% @blog.comments.each do |c| %>
				<p><%= c.comment_body %></p>
				<p><%= c.user.email %></p>
		<% end %>
	</div>
</div>